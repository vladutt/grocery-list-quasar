<?xml version='1.0' encoding='utf-8'?>
<widget id="grocer.mate.yzy" version="0.0.35" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Grocer Mate</name>
    <description>Smart shopping list</description>
    <author email="contact@vladutteodor.ro" href="https://vladutteodor.ro">
        Vladut Teodor
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="about:*" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <platform name="android">
        <allow-intent href="market:*" />
        <plugin name="cordova-universal-links-plugin" spec="1.2.1">
            <variable name="URL_SCHEME" value="grocermate" />
            <variable name="DEEPLINK_HOST" value="grocermate.ro" />
            <variable name="DEEPLINK_SCHEME" value="https" />
        </plugin>
        <universal-links>
            <host name="grocermate.ro">
                <path event="homeEvent" url="/app" />
                <path event="aboutEvent" url="/about" />
                <path event="productEvent" url="/product/*" />
            </host>
        </universal-links>
        <icon density="ldpi" src="res/android/ldpi.png" />
        <icon density="mdpi" src="res/android/mdpi.png" />
        <icon density="hdpi" src="res/android/hdpi.png" />
        <icon density="xhdpi" src="res/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/android/xxxhdpi.png" />
        <preference density="land-ldpi" name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-land-ldpi.png" />
        <preference density="port-ldpi" name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-port-ldpi.png" />
        <preference density="land-mdpi" name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-land-mdpi.png" />
        <preference density="port-mdpi" name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-port-mdpi.png" />
        <preference density="land-hdpi" name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-land-hdpi.png" />
        <preference density="port-hdpi" name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-port-hdpi.png" />
        <preference density="land-xhdpi" name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-land-xhdpi.png" />
        <preference density="port-xhdpi" name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-port-xhdpi.png" />
        <preference density="land-xxhdpi" name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-land-xxhdpi.png" />
        <preference density="port-xxhdpi" name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-port-xxhdpi.png" />
        <preference density="land-xxxhdpi" name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-land-xxxhdpi.png" />
        <preference density="port-xxxhdpi" name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-port-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <icon height="57" src="res/ios/icon.png" width="57" />
        <icon height="114" src="res/ios/icon@2x.png" width="114" />
        <icon height="40" src="res/ios/icon-20@2x.png" width="40" />
        <icon height="60" src="res/ios/icon-20@3x.png" width="60" />
        <icon height="29" src="res/ios/icon-29.png" width="29" />
        <icon height="58" src="res/ios/icon-29@2x.png" width="58" />
        <icon height="87" src="res/ios/icon-29@3x.png" width="87" />
        <icon height="80" src="res/ios/icon-40@2x.png" width="80" />
        <icon height="120" src="res/ios/icon-60@2x.png" width="120" />
        <icon height="180" src="res/ios/icon-60@3x.png" width="180" />
        <icon height="20" src="res/ios/icon-20.png" width="20" />
        <icon height="40" src="res/ios/icon-40.png" width="40" />
        <icon height="50" src="res/ios/icon-50.png" width="50" />
